<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_margin="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--  FIRST LIGN WITH SUBJECT HOUR AND ROOM  -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/create_meeting_tv_subject_meeting"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sujet">
                </TextView>

                <TextView
                    android:id="@+id/create_meeting_tv_hour_meeting"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14h30">
                </TextView>

                <TextView
                    android:id="@+id/create_meeting_tv_room_meeting"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salle 1">
                </TextView>

                <TextView
                    android:id="@+id/create_meeting_tv_participant_meeting"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="harold@yourdj.fr,harold@yourdj.fr, harold@yourdj.fr,  ">
                </TextView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--&lt;!&ndash;  SCOND LIGN WITH PARTICIPANT &ndash;&gt;
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/create_meeting_tv_participant_meeting"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="harold@yourdj.fr,harold@yourdj.fr, harold@yourdj.fr,  ">
                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>-->

            <!--&lt;!&ndash;  SCOND LIGN WITH PARTICIPANT &ndash;&gt;
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/create_meeting_tv_participant_meeting"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="harold@yourdj.fr, toi@yourdj.fr, kevin@yourdj.fr">
                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>-->

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>